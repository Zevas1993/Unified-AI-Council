{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "types": ["node", "vscode"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "dist",
    "vitest.config.ts",
    "**/*.test.ts"
  ]
}
